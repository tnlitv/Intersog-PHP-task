<html>
<head>
    <title>Example Application</title>
    <link rel="stylesheet" href="http://yui.yahooapis.com/pure/0.6.0/pure-min.css">
</head>
<body style="padding: 10px; padding-left: 160px;">
<h1>All albums</h1>

<p><a href="/users/new">Add new user</a></p>

{% if users %}
    <table class="pure-table pure-table-horizontal">
        <tr>
            <th>Name</th>
            <th>Active </th>
            <th>Created at</th>
        </tr>

        {% for user in users %}
            <tr>
                <td>{{ user.name  }}</td>
                <td>{{ user.username  }}</td>
                <td>{{ user.created_at | date('d/m/Y H:i')  }}</td>
            </tr>
        {% endfor %}
    </table>
{% else %}
    <p>No current users</p>
{% endif %}

</body>
</html>